<h1>Noticias</h1>
<%= link_to 'Volver a usuario', feeds_path %>


    <% @feed_sort.try(:each) do |feed| %>
    <body>
    <table width="400", style= "background-color: #D0DCD1" >
      <tr>
        <tr><th><%= feed.titular %></th></tr>
        <tr><td><br><%= feed.bajada %></br></td></tr>
        <p align="justify"> <tr><td><br><%= truncate(feed.cuerpo, length: 1002) %></td></tr></p>
        <tr><td>Comentarios: <%= feed.ncomentarios %></br></td></tr>
        <tr><td><%= link_to 'Edit', edit_feed_path(feed) %></td></tr>
        <tr><td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td></tr>
        <br></br>
      </tr>
    </table>
    </body>


    <% end %>


